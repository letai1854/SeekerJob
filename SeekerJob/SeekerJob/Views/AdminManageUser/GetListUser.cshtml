@using SeekerJob.Models

@{
    var table = ViewData["table"] as List<Login>;

}


<div class="col-xl-9 col-lg-8 col-md-12 m-b30">
    <!--Filter Short By-->
    <div class="twm-right-section-panel candidate-save-job " style="background-color:white">
        <div class="twm-D_table table-responsive">
            <table id="jobs_bookmark_table" class="table table-bordered twm-candidate-save-job-list-wrap">
                <thead>
                    <tr>
                        <th>Tên tài khoản</th>
                        <th>Loại</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>

                    </tr>
                </thead>
                <tbody>
                    <!--1-->
                    @foreach (var item in table)
                    {
                        <tr>
                            <td>
                                <h4>@item.username</h4>
                            </td>
                            <td>
                                <div>@item.typeRow</div>
                            </td>
                            <td>
                                <div>
                                    @if (item.status == true)
                                    {
                                        <p>On</p>
                                    }
                                    else
                                    {
                                        <p>Off</p>
                                    }
                            </div>
                        </td>

                        <td>
                            <div class="twm-table-controls">
                                <ul class="twm-DT-controls-icon list-unstyled">
                                    <li>
                                        @if (item.typeRow == "Thí sinh")
                                        {
                                            <a data-bs-toggle="modal" href="@ViewBag.hoso/@item.username" role="button" class="custom-toltip">
                                                <span class="fa fa-eye"></span>
                                                <span class="custom-toltip-block">Veiw</span>
                                            </a>

                                        }
                                        else
                                        {
                                            <a data-bs-toggle="modal" href="@ViewBag.hosocongty/@item.username" role="button" class="custom-toltip">
                                                <span class="fa fa-eye"></span>
                                                <span class="custom-toltip-block">Veiw</span>
                                            </a>
                                        }

                                    </li>
                                    <li>
                                        <a data-bs-toggle="modal" href="#" role="button" class="custom-toltip">
                                            <span class="fa fa-edit"></span>
                                            <span class="custom-toltip-block">Edit</span>
                                        </a>
                                    </li>
                                    @*<li>
                                            <button title="Delete" data-bs-toggle="tooltip" data-bs-placement="top">
                                                <span class="far fa-trash-alt"></span>
                                            </button>
                                        </li>*@
                                </ul>
                            </div>
                        </td>
                    </tr>
                }



                </tbody>

            </table>
        </div>
    </div>
</div>