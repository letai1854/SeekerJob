@using SeekerJob.Models
@model List<News>




<div class="col-xl-9 col-lg-8 col-md-12 m-b30">
    <!--Filter Short By-->
    <div class="twm-right-section-panel candidate-save-job " style="background-color:white">
        <div class="twm-D_table table-responsive">
            <table id="jobs_bookmark_table" class="table table-bordered twm-candidate-save-job-list-wrap">
                <thead>
                    <tr>
                        <th>Tiêu đề tin tức</th>
                        <th>Ngày</th>
                        <th>Hành động</th>

                    </tr>
                </thead>
                <tbody>
                    <!--1-->
                    @foreach (var item in Model)
                    {
                        <tr id="tr_@item.id">
                            <td>
                                <div class="twm-candidate-save-job-list">
                                    <div class="twm-media">
                                        <div class="twm-media-pic">
                                            <img src="~/ContentImage/images/jobs-company/@item.image" alt="#">
                                        </div>
                                    </div>
                                    <div class="twm-mid-content">
                                        <a href="#" class="twm-job-title">
                                            <h4>Senior Web Designer</h4>
                                        </a>

                                    </div>

                                </div>
                            </td>
                            <td>
                                <div>@item.daypost.Value.ToString("dd/MM/yyyy")</div>
                            </td>

                            <td>
                                <div class="twm-table-controls">
                                    <ul class="twm-DT-controls-icon list-unstyled">
                                        <li>
                                            <a href="@ViewBag.tintuc/@item.meta/@item.id" class="custom-toltip">
                                                <span class="fa fa-eye"></span>
                                                <span class="custom-toltip-block">Veiw</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@ViewBag.suatintuc/@item.meta/@item.id" class="custom-toltip">
                                                <span class="fa fa-edit"></span>
                                                <span class="custom-toltip-block">Edit</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a  href="javascript:Delete('@item.id','@item.title')"  class="custom-toltip">
                                            <span class="far fa-trash-alt"></span>
                                            <span class="custom-toltip-block">Delete</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }




                </tbody>

            </table>
        </div>
    </div>
</div>
<script>
    function Delete(id, title) {
        if (confirm('Bạn có chắc muốn xóa tin tức này không: ' + title)) {
            var form = new FormData();
            form.append('id', id);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", domain + '/PostNews/DeleteNews', true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    var content = xhr.responseText;
                    var json_ct = JSON.parse(content);
                    if (json_ct.Data.status == "OK") {
                        $('#tr_' + id).remove();
                    }
                    else {
                        alert("Error");
                    }
                }
            }
            xhr.send(form);
        }
    }
</script>