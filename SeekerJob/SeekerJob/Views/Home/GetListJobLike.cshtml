
@using SeekerJob.Controllers
@using SeekerJob.DataSystem

<script>
    var domain = '@Request.Url.Scheme://@Request.Url.Host:@Request.Url.Port';
</script>

@{
    var listjob = ViewData["listjob"] as List<Job>;

}

<div class="col-lg-8 col-md-12 col-sm-12 mb-4 row">
    @foreach (var item in listjob)
    {
        var relativeTime = data.GetRelativeTime((DateTime)item.startday); // Or use item.startday, depending on your use case

        <div class="col-lg-6 col-md-6 col-sm-12 mb-4">
            <div class="job-card bg-white border p-3 d-flex align-items-center">
                <div class="job-card-image-wrapper position-relative">
                    <img src="~/ContentImage/images/@item.image" alt="job-image" class="job-card-image">
                </div>
                <div class="job-card-content flex-grow-1 pl-4">
                    <a href="job-detail.html" class="job-title text-dark font-weight-bold">
                        <h4 style="font-size: 15px">@item.title <span class="text-success job-duration" style="font-size: 13px">/ @relativeTime</span></h4>
                    </a>
                    <p class="job-address text-muted mb-2" style="font-size: 13px">@item.addressdetail</p>
                </div>
                <div class="job-card-right-content text-right">
                    @if (item.jobcategory == "Fulltime")
                    {
                        <div class="job-category badge badge-fulltime" style="font-size: 11px">@item.jobcategory</div>

                    }
                    else if (item.jobcategory == "Parttime")
                    {
                        <div class="job-category badge " style="font-size: 11px; background-color:brown">@item.jobcategory</div>

                    }
                    else
                    {
                        <div class="job-category badge" style="font-size: 11px; background-color:chartreuse">@item.jobcategory</div>

                    }
                    <div class="job-salary text-dark font-weight-bold" style="font-size: 13px">$1500 <span class="text-success" style="font-size: 13px">/ Tháng</span></div>
                    <a href="job-detail.html" class="job-browse text-primary font-weight-bold" style="font-size: 13px">Browse Job</a>
                </div>
            </div>


        </div>
    }
</div>



