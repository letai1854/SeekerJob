                if (tablebannerpart.Any(p => p.idtable == item.id))
                {
                    foreach (var part in tablebannerpart.Where(p => p.idtable == item.id && (p.hide ?? true)))
                    {

                        if (item.typeRow == "bannerpage")
                        {
                            if (part.meta == "noi-dung-1")
                            {
                                <div class="twm-bnr-title-small" style="color:white;">@part.content</div>
                            }
                            else if (part.meta == "noi-dung-2")
                            {
                                <div class="twm-bnr-title-large" style="color:white;">@part.content</div>
                            }
                            else if (part.meta == "noi-dung-3")
