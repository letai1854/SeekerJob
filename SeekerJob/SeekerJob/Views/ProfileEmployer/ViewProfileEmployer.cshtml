@using SeekerJob.Controllers
@using SeekerJob.DataSystem
@{
    var info = ViewData["info"] as InforEmployer;
    var table = ViewData["table"] as List<Job>;
}

@{
    ViewBag.Title = "ViewProfileEmployer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
</head>
<style>
    .header_img {
        background: linear-gradient(90deg, rgb(29, 206, 209) 0%, rgb(27, 70, 191) 100%);
    }

    .container {
        max-width: 1200px;
    }

    h1,
    h3 {
        margin-bottom: 20px;
    }

    #map {
        background: url('https://maps.gstatic.com/tactile/pane/default/pane-0.png') center center no-repeat;
        background-size: cover;
    }

    footer {
        margin-top: 50px;
    }

    .t-white {
        color: #fff;
    }
    p::-webkit-scrollbar {
        display: none; /* Ẩn thanh cuộn */
    }
    table {
        border: none !important;
    }

        table th,
        table td {
            border: none !important;
        }
</style>



<div class="container" style="margin-top: 150px;">

    <div class="container header_img" style="padding: 10px 70px; border-radius:10px">
        <img src="~/ContentImage/images/@info.image" style="height: 170px; width:170px; border-radius:100px" alt="">
        <div class="container text-center" style="display: flex; justify-content:space-between">
            <h1 class="t-white" style="font-size: 40px;">@info.namecompany</h1>
            <button style="height: 50px; width:200px; border-radius:10px; border-color:#fff">Theo dỗi công ty</button>
        </div>

    </div>

    <!-- Company Info Section -->
    <div class="container my-4">
        <div class="row">
            <!-- Company Introduction -->
            <div class="col-md-8">
                <div class="bg-light p-3 border rounded">
                    <div class="header_img" style="padding:5px 10px; border-top-left-radius: 10px; border-top-right-radius:10px">
                        <h4 class="t-white">Giới thiệu công ty</h4>
                    </div>
                    <p style="margin-top: 10px;">

                        @Html.Raw(@info.description)
                    </p>

                </div>
                <div class="row" style="margin-top: 50px;">
                    <h3 class="mb-3">Tuyển dụng</h3>
                    <div class="row col-md-12">
                        <!-- Job Card -->
                        <div class="twm-jobs-list-wrap">
                            <table id="jobs_bookmark_table_search" class="table table-bordered twm-candidate-save-job-list-wrap">

                                <thead>
                                <th>
                                </th>
                                </thead>
                                <tbody>

                                    @foreach (var item in table)
                                    {
                                        var relativeTime = data.GetRelativeTime((DateTime)item.startday);
                                        <tr>
                                            <td>
                                                <div class="twm-jobs-list-style1 mb-5">
                                                    <div class="twm-media">
                                                        <img src="~/ContentImage/images/@item.image" alt="#">
                                                    </div>
                                                    <div class="twm-mid-content">
                                                        <a href="@item.meta/@item.id" class="twm-job-title">
                                                            <h4>@item.title<span class="twm-job-post-duration">/@relativeTime</span></h4>
                                                        </a>
                                                        <p class="twm-job-address">@item.addressdetail</p>
                                                        <a href="@info.linkweb" class="twm-job-websites site-text-primary">@info.linkweb</a>
                                                    </div>
                                                    <div class="twm-right-content">
                                                        @if (@item.jobcategory == EnumType.jobCategory.Fulltime.ToString())
                                                        {
                                                            <div class="twm-jobs-category green"><span class="twm-bg-green">@item.jobcategory</span></div>

                                                        }
                                                        @if (@item.jobcategory == EnumType.jobCategory.Parttime.ToString())
                                                        {
                                                            <div class="twm-jobs-category golden"><span class="twm-bg-golden">@item.jobcategory</span></div>

                                                        }
                                                        @if (@item.jobcategory == EnumType.jobCategory.Internship.ToString())
                                                        {
                                                            <div class="twm-jobs-category brown"><span class="twm-bg-brown">@item.jobcategory</span></div>

                                                        }
                                                        @if (@item.jobcategory == EnumType.jobCategory.Volunteer.ToString())
                                                        {
                                                            <div class="twm-jobs-category "><span class="twm-bg-candi-pattern">@item.jobcategory</span></div>

                                                        }
                                                        @if (@item.jobcategory == EnumType.jobCategory.Freelance.ToString())
                                                        {
                                                            <div class="twm-jobs-category purple"><span class="twm-bg-purple">@item.jobcategory</span></div>

                                                        }
                                                        @if (@item.jobcategory == EnumType.jobCategory.Temporary.ToString())
                                                        {
                                                            <div class="twm-jobs-category red"><span class="twm-bg-red">@item.jobcategory</span></div>
                                                        }
                                                        <div class="twm-jobs-amount">@item.offer <span>/ Month</span></div>
                                                        <a href="@item.meta/@item.id" class="twm-jobs-browse site-text-primary">Browse Job</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>

                </div>
            </div>
            <!-- Contact Info -->
            <div class="col-md-4">
                <div class="bg-light p-3 border rounded">
                    <div class="header_img" style="padding:5px 10px; border-top-left-radius: 10px; border-top-right-radius:10px">
                        <h4 class="t-white">Thông tin liên hệ</h4>
                    </div>
                    <p style="margin-top: 10px;"><span style="font-weight:700; font-size:16px">Địa chỉ:</span> @info.addressDetail</p>
                    <p style="margin-top: 10px;"><span style="font-weight:700; font-size:16px">Email:</span> @info.email</p>
                    <p style="margin-top: 10px;"><span style="font-weight:700; font-size:16px">Số điện thoại:</span> @info.phone</p>

                </div>
                <div class="bg-light p-3 border rounded" style="margin-top: 10px;">
                    <div class="header_img" style="padding:5px 10px; border-top-left-radius: 10px; border-top-right-radius:10px">
                        <h4 class="t-white">Chia sẻ công ty với bạn bè</h4>
                    </div>

                    <p style="color: black; font-size:15px">Sao chép đường dẫn</p>
                    <p style="max-width: 300px; overflow-x: scroll; white-space: nowrap; scrollbar-width: none; -ms-overflow-style: none;">
                        @info.linkweb
                    </p>

                    <p style="color: black; font-size:15px">Chia sẻ qua mạng xã hội</p>
                    <div class="d-flex" style="justify-content:space-around;">
                        <a href="/@info.facebook"><img style="height:30px; width:30px" src="~/ContentImage/images/icons8-facebook-50.png" alt=""></a>
                        <a href="/@info.twitter"><img style="height:30px; width:30px" src="~/ContentImage/images/icons8-twitter-48.png" alt=""></a>
                        <a href="/@info.instagram"><img style="height:30px; width:30px" src="~/ContentImage/images/icons8-instagram-48.png" alt=""></a>
                        <a href="/@info.linkedin"><img style="height:30px; width:30px" src="~/ContentImage/images/icons8-linkedin-48.png" alt=""></a>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<script>
        $(document).ready(function() {
            // Khởi tạo DataTables một lần duy nhất
            var jobsBookmarkTable = $('#jobs_bookmark_table_search').DataTable({
                "paging": true,
                "pageLength": 4,
                "lengthChange": false,
                "searching": true,
                "info": false,
                "autoWidth": false,
                "language": {
                    "paginate": {
                        "previous": "Trước",
                        "next": "Sau"
                    }
                }
            });
        });
</script>