
@{
    var table = ViewData["table"] as List<SeekerJob.AddCV>;

}



<div class="col-xl-9 col-lg-8 col-md-12 m-b30">
    <!--Filter Short By-->
    <div class="twm-right-section-panel site-bg-gray">
        <form>
            <!--Basic Information-->
            <div class="panel panel-default">
                <div class="panel-heading wt-panel-heading p-a20">
                    <h4 class="panel-tittle m-a0"><i class="fa fa-suitcase"></i>Thêm CV</h4>
                </div>
                <div class="panel-body wt-panel-body p-a20 m-b30 ">

                    <div class="row">
                        <!--Job title-->
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Tiêu đề chính</label>
                                <div class="ls-inputicon-box">
                                    <input class="form-control" name="company_name" type="text" placeholder="Devid Smith">
                                    <i class="fs-input-icon fa fa-newspaper"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Tiêu đề phụ</label>
                                <div class="ls-inputicon-box">
                                    <input class="form-control" name="company_short" type="text" placeholder="short brief">
                                    <i class="fs-input-icon fa fa-hacker-news-square"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Mã CV</label>
                                <div class="ls-inputicon-box">
                                    <input class="form-control" name="company_Email" type="id" placeholder="#cv1_up_popup/242814337652458">
                                    <i class="fs-input-icon fas fa-id-badge"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <div class="form-group">
                                <label>Loại CV</label>
                                <div class="ls-inputicon-box">
                                    <select class="form-control" name="typeCv">
                                        <option value="Tiêu chuẩn">Tiêu chuẩn</option>
                                        <option value="Chuyên nghiệp">Chuyên nghiệp</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="twm-candidate-profile-pic">
                                <label>Ảnh bìa</label>
                                <img src="~/ContentImage/images/blog/blog-single/1.jpg" alt="">
                                <div class="upload-btn-wrapper">

                                    <div id="upload-image-grid"></div>
                                    <button class="site-button button-sm">Tải ảnh lên</button>
                                    <input type="file" name="myfile" id="file-uploader" accept=".jpg, .jpeg, .png">
                                </div>

                            </div>
                        </div>



                        <!--Start Date-->
                        <!--End Date-->


                        <div class="col-lg-12 col-md-12">
                            <div class="text-left">
                                <button type="submit" class="site-button m-r5">Thêm CV</button>
                            </div>
                        </div>




                    </div>

                </div>
            </div>
        </form>
    </div>
    <div class="twm-right-section-panel candidate-save-job " style="background-color:white" style=" margin-top:20px;">
        <div class="twm-D_table table-responsive">
            <table id="jobs_bookmark_table" class="table table-bordered twm-candidate-save-job-list-wrap">
                <thead>
                    <tr>
                        <th>Tiêu đề chính</th>
                        <th>Tiêu đề phụ</th>
                        <th>Hình ảnh</th>
                        <th>Loại Cv</th>
                        <th>Hành động</th>

                    </tr>
                </thead>
                <tbody>
                    <!--1-->
                    @foreach (var item in table)
                    {
                        <tr>
                            <td>
                                <div>@item.tilteBig</div>
                            </td>
                            <td>
                                <div>@item.titleMall</div>
                            </td>
                            <td>
                                <div class="twm-candidate-save-job-list">
                                    <div class="twm-media">
                                        <div class="twm-media-pic">
                                            <img src="~/ContentImage/images/@item.image" alt="#">
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <select class="form-control" name="typeCv">
                                    <option value="Tiêu chuẩn" @(item.typeCv == "Tiêu chuẩn" ? "selected" : "")>Tiêu chuẩn</option>
                                    <option value="Chuyên nghiệp" @(item.typeCv == "Chuyên nghiệp" ? "selected" : "")>Chuyên nghiệp</option>
                                </select>
                            </td>

                            <td>
                                <div class="twm-table-controls">
                                    <ul class="twm-DT-controls-icon list-unstyled">
                                        <li>
                                            <a data-bs-toggle="modal" href="#" class="custom-toltip">
                                                <span class="fa fa-eye"></span>
                                                <span class="custom-toltip-block">Veiw</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-bs-toggle="modal" href="#" class="custom-toltip">
                                                <span class="fa fa-edit"></span>
                                                <span class="custom-toltip-block">Edit</span>
                                            </a>
                                        </li>
                                        <li>
                                            <button title="Delete" data-bs-toggle="tooltip" data-bs-placement="top">
                                                <span class="far fa-trash-alt"></span>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>

            </table>
        </div>
    </div>



</div>

