<script>
    document.addEventListener('DOMContentLoaded', () => {
        const track = document.querySelector('.carousel-track');
        const slides = Array.from(track.children);
        const slidesToShow = 3;
        const slideWidth = slides[0].getBoundingClientRect().width;

        // Clone first and last slidesToShow slides
        const firstClones = slides.slice(0, slidesToShow).map(slide => slide.cloneNode(true));
        const lastClones = slides.slice(-slidesToShow).map(slide => slide.cloneNode(true));

        // Append clones to track
        firstClones.forEach(clone => track.appendChild(clone));
        lastClones.forEach(clone => track.insertBefore(clone, track.firstChild));

        const allSlides = Array.from(track.children);
        const totalSlides = allSlides.length;

        // Set initial index to slidesToShow (to account for clones at the start)
        let currentIndex = slidesToShow;

        // Set initial position of the track
        track.style.transform = `translateX(${-currentIndex * slideWidth}px)`;

        let isTransitioning = false;

        // Function to update the carousel's position
        function updateCarousel() {
            if (isTransitioning) return;
            track.style.transition = 'transform 0.5s ease-in-out';
            track.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
        }

        // Function to move to the next slide
        function nextSlide() {
            if (isTransitioning) return;
            currentIndex++;
            updateCarousel();
        }

        // Function to move to the previous slide
        function prevSlide() {
            if (isTransitioning) return;
            currentIndex--;
            updateCarousel();
        }

        // Event listener for when the transition starts
        track.addEventListener('transitionstart', () => {
            isTransitioning = true;
        });

        // Event listener for when the transition ends
        track.addEventListener('transitionend', () => {
            isTransitioning = false;
            // If we've moved past the last clone, reset to the original first slide
            if (currentIndex >= totalSlides - slidesToShow) {
                currentIndex = slidesToShow;
                track.style.transition = 'none';
                track.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
            }
            // If we've moved before the first clone, reset to the original last slide
            if (currentIndex < slidesToShow) {
                currentIndex = totalSlides - slidesToShow * 2;
                track.style.transition = 'none';
                track.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
            }
        });

        // Event listeners for the buttons
        document.querySelector('.next-btn').addEventListener('click', nextSlide);
        document.querySelector('.prev-btn').addEventListener('click', prevSlide);

        // Automatic sliding every 3 seconds
        setInterval(nextSlide, 7000);

        // Optional: Pause automatic sliding when hovering over the carousel
        const carouselContainer = document.querySelector('.carousel-container');
        carouselContainer.addEventListener('mouseenter', () => {
            clearInterval(autoSlide);
        });
        carouselContainer.addEventListener('mouseleave', () => {
            autoSlide = setInterval(nextSlide, 7000);
        });
    });
</script>
<script>
    let countdownInterval; // Để lưu bộ đếm thời gian hiện tại
    let timer; // Biến lưu thời gian đếm ngược

    // Hàm bắt đầu đếm ngược
    function startCountdown() {
        if (countdownInterval) {
            clearInterval(countdownInterval); // Xóa bộ đếm cũ nếu có
        }

        // Hiện ô nhập mã xác thực và nút xác nhận
        document.getElementById('verificationInput').style.display = 'block';
        document.getElementById('confirmBtn').style.display = 'block';

        // Hiện bộ đếm thời gian
        document.getElementById('countdownTimer').style.display = 'block';

        // Khởi động lại đếm ngược từ 2 phút
        timer = 120;
        var countdownElement = document.getElementById('time');
        countdownElement.textContent = "02:00"; // Đặt lại văn bản về 02:00 khi bắt đầu

        // Khởi động bộ đếm mới
        countdownInterval = setInterval(function () {
            var minutes = Math.floor(timer / 60);
            var seconds = timer % 60;
            countdownElement.textContent =
                (minutes < 10 ? '0' : '') + minutes + ':' + (seconds < 10 ? '0' : '') + seconds;

            if (timer <= 0) {
                clearInterval(countdownInterval);
                countdownElement.textContent = "Hết giờ!";
                hideCountdownAndInput(); // Ẩn sau 2 phút
            } else {
                timer--;
            }
        }, 1000);
    }

    // Hàm ẩn bộ đếm thời gian và ô nhập mã
    function hideCountdownAndInput() {
        document.getElementById('countdownTimer').style.display = 'none';
        document.getElementById('verificationInput').style.display = 'none';
        document.getElementById('confirmBtn').style.display = 'none';
    }

    // Xử lý khi người dùng bấm nút "Gửi"
    document.getElementById('sendBtn').addEventListener('click', function () {
        startCountdown();
    });

    // Xử lý khi popup bị đóng (người dùng thoát khỏi popup)
    document.getElementById('forgot_password_popup').addEventListener('hidden.bs.modal', function () {
        clearInterval(countdownInterval); // Dừng đếm ngược nếu popup bị đóng
        hideCountdownAndInput(); // Ẩn ô nhập mã và bộ đếm
    });

</script>

