<style>
    .search-container {
        position: relative;
        width: 300px;
    }

        .search-container input[type="text"] {
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    .suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background-color: #fff;
        border: 1px solid #ccc;
        border-top: none;
        z-index: 10;
        max-height: 200px;
        overflow-y: auto;
        display: none;
    }

        .suggestions li {
            padding: 10px;
            cursor: pointer;
        }

            .suggestions li:hover {
                background-color: #f0f0f0;
            }

    .card_item {
        background-color: #f0f0f0;
        border: 1px rgb(216, 216, 216) solid;
        padding: 20px;
        border-radius: 5px;
    }

    .badge-fulltime {
        background-color: #6f42c1;
        color: white;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .job-salary {
        margin: 20px 0 10px;
        font-size: 16px;
    }

    .job-card {
        background-color: white;
        border: 1px solid #e3e3e3;
        padding: 15px;
        display: flex;
        align-items: center;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .job-card-image-wrapper {
        position: relative;
        width: 70px;
        height: 70px;
        overflow: hidden;
        border-radius: 50%;
    }

    .job-card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .job-title {
        text-decoration: none;
    }

        .job-title h4 {
            font-size: 18px;
            color: #333;
            font-weight: bold;
            margin: 0;
        }

        .job-title .job-duration {
            font-size: 14px;
            color: #28a745;
            /* Green color for duration */
        }

    .job-address {
        font-size: 14px;
        color: #888888;
    }

    .job-website {
        color: #007bff;
        text-decoration: none;
    }

        .job-website:hover {
            text-decoration: underline;
        }

    .job-card-right-content {
        text-align: right;
    }

    .badge-fulltime {
        background-color: #7851a9;
        /* Purple badge */
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
    }

    .job-salary {
        font-size: 16px;
        font-weight: bold;
        color: #333;
    }

        .job-salary .text-success {
            color: #28a745;
            /* Green color */
            font-size: 14px;
        }

    .job-browse {
        color: #007bff;
        font-weight: bold;
        text-decoration: none;
    }

        .job-browse:hover {
            text-decoration: underline;
        }

    .job-card-content {
        flex-grow: 1;
        padding-left: 20px;
    }

    .job-card h4 {
        margin-bottom: 8px;
    }

    .mb-2 {
        margin-bottom: 10px;
    }

    .job-browse {
        white-space: nowrap;
    }

    .custom-search-wrapper {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .custom-search-bar {
        display: flex;
        background-color: white;
        border-radius: 30px;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        align-items: center;
    }

    .custom-search-input {
        flex-grow: 2;
        padding: 10px 15px;
        border: none;
        border-radius: 30px;
        font-size: 16px;
        outline: none;
    }

    .custom-dropdown-container {
        display: flex;
        gap: 10px;
        margin-left: 15px;
    }

    .custom-dropdown {
        padding: 10px;
        border: none;
        border-radius: 30px;
        background-color: #f5f5f5;
        font-size: 14px;
    }

    .custom-search-button {
        padding: 10px 20px;
        margin-left: 15px;
        background-color: #00b14f;
        border: none;
        border-radius: 30px;
        color: white;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .custom-search-button:hover {
            background-color: #008c3a;
        }

    .carousel-container {
        position: relative;
        width: 100%;
        margin: auto;
        overflow: hidden;
    }

    .carousel-new {
        display: flex;
        justify-content: space-between;
        overflow: hidden;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

    .carousel-new img {
        width: 33.33%;
        /* 1/3 of the carousel */
        padding: 5px;
        border-radius: 10px;
    }

    .prev-btn,
    .next-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        font-size: 24px;
        cursor: pointer;
        padding: 10px;
        z-index: 1;
    }

    .prev-btn {
        left: 0;
    }

    .next-btn {
        right: 0;
    }
    /* CSS Tùy Chỉnh cho Carousel */

    .carousel-wrapper {
        height: 100%;
        min-height: 300px;
        /* Chiều cao tối thiểu */
    }

    .carousel-inner,
    .carousel-item {
        height: 100%;
    }

    .carousel-inner {
        max-height: 500px;
        /* Điều chỉnh chiều cao nếu cần */
        width: auto;
        object-fit: cover;
    }

    .carousel-item img {
        height: 100%;
        width: 100%;
    }



    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 50%;
    }

    .twm-home18-banner-section .row .twm-h-page-18-bnr-right-section .twm-shape-l {
        border-color: #0D0232;
        border-style: solid;
    }

