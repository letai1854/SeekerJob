                        </td>
                       
                        <td>
                            @string.Format("{0:dd/MM/yyyy}", item.datebegin.Value)
                        </td>
                        <td>
                            <div class="twm-table-controls">
                                <ul class="twm-DT-controls-icon list-unstyled">

                                    <li>
                                        <a href="@Url.Action("Edit", "Advertise", new { id = item.id, idtable = item.idtable })" role="button" class="custom-toltip" data-modal="">
                                            @Html.Raw("<span class=\"fa fa-edit\"></span><span class=\"custom-toltip-block\">Edit</span>")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:Delete3('@item.id','@item.idtable')" class="custom-toltip">
                                            <span class="far fa-trash-alt"></span>
                                            <span class="custom-toltip-block">Delete</span>
                                        </a>
                                    </li>

                                </ul>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section _footer{
    <!-- Page level plugins -->
    <script src="~/Areas/admin/Content/vendor_/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor_/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/Areas/admin/Content/js_/demo/datatables-demo.js"></script>

}




<script>
    function Delete1(id, title) {
        if (confirm('Bạn có chắc muốn xóa tin tức này không: ' + title)) {
            var form = new FormData();
            form.append('id', id);
            var xhr = new XMLHttpRequest();
            xhr.open("POST", domain + '/Advertise/Delete1', true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    var content = xhr.responseText;
                    var json_ct = JSON.parse(content);
                    if (json_ct.Data.status == "OK") {
                        $('#tr1_' + id).fadeOut(300, function () {
                            $(this).remove();
                        });
                    }
                    else {
                        alert("Error");
                    }
                }
            }
            xhr.send(form);
        }
    }

