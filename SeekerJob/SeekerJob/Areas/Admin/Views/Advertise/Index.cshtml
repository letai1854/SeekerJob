                {
                    <tr id="tr1_@item.id" style="background-color: #fff; color: black;">
                        <td>@Html.Raw(Number++)</td>
                        <td><img src="~/ContentImage/images/@item.link" /></td>
                        <td>@Html.DisplayFor(modelItem => item.content)</td>
                        <td>@Html.DisplayFor(modelItem => item.link)</td>
                        <td>@Html.DisplayFor(modelItem => item.meta)</td>
                        <td>

                            @Html.DisplayFor(modelItem => item.hide)
                       
                        </td>
                        <td>
                            @string.Format("{0:dd/MM/yyyy}", item.datebegin.Value)
                        </td>
                        <td>
                            <div class="twm-table-controls">
                                <ul class="twm-DT-controls-icon list-unstyled">

                                    <li>
                                        <a href="@Url.Action("Edit", "Advertise", new { id = item.id, idtable = item.idtable })" role="button" class="custom-toltip" data-modal="">
                                            @Html.Raw("<span class=\"fa fa-edit\"></span><span class=\"custom-toltip-block\">Edit</span>")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:Delete1('@item.id','@item.idtable')" class="custom-toltip">
                                            <span class="far fa-trash-alt"></span>
                                            <span class="custom-toltip-block">Delete</span>
                                        </a>
                                    </li>

                                </ul>
                            </div>

                        </td>
                    </tr>
                }
                @foreach (var item in tablenews)
                {
