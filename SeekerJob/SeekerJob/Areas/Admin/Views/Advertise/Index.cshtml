@using SeekerJob.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}
@{
    var tablepro = ViewData["tablepro"] as List<tablebannerpart>;
