
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
    SeekerJob.Models.tablebannerpart inforadv = ViewBag.adv as SeekerJob.Models.tablebannerpart;


}

<!-- Thêm vào phần head của _MyLayout.cshtml hoặc trang Edit -->
