<style>
    .custom-toltip-block {
        display: none;
        background-color: #fff; /* Nền trắng */
        color: #000; /* Chữ màu đen */
        padding: 5px; /* Khoảng cách bên trong tooltip */
        border-radius: 4px; /* Bo góc */
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2); /* Đổ bóng nhẹ */
        position: absolute;
        z-index: 10;
    }

    .custom-toltip:hover .custom-toltip-block {
        display: block; /* Hiển thị tooltip khi rê chuột */
    }

    .twm-media-pic img {
        width: 100px; /* Chiều rộng ảnh */
        height: 100px; /* Chiều cao ảnh */
        object-fit: cover; /* Đảm bảo ảnh không bị méo */
        border-radius: 20%; /* Bo tròn góc để ảnh trở thành hình tròn */
        border: 2px solid #ddd; /* Đường viền mỏng quanh ảnh */
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2); /* Đổ bóng nhẹ */
    }
    .modal.show {
        display: block !important;
        opacity: 1 !important;
    }


</style>
<div class="card shadow mb-4">

    <div class="card-header py-3">
        <a href="@Url.Action("Create")" class="custom-button">+ Thêm mới</a>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">

        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tiêu đề chính</th>
                    <th>Tiêu đề phụ</th>
                    <th>Hình ảnh</th>
                    <th>Loại Cv</th>
                    <th>Hành động</th>
                </tr>
            </thead>


            @{var Number = 1; }
            @foreach (var item in table)
            {

                <tr>

                    <td>
                        @Html.Raw(Number++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tilteBig)  
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.titleMall)
                    </td>
                    <td>
                        <div class="twm-candidate-save-job-list">
                            <div class="twm-media">
                                <div class="twm-media-pic">
                                    <img src="~/ContentImage/images/@item.image" alt="#">
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <select class="form-control" name="typeCv">
                            <option value="Tiêu chuẩn" @(item.typeCv == "Tiêu chuẩn" ? "selected" : "")>Tiêu chuẩn</option>
                            <option value="Chuyên nghiệp" @(item.typeCv == "Chuyên nghiệp" ? "selected" : "")>Chuyên nghiệp</option>
                        </select>
                    </td>
                    <td>
                        <div class="twm-table-controls">
                            <ul class="twm-DT-controls-icon list-unstyled">
                                <li>
                                    @if (item.typeCv == "Chuyên nghiệp")
                                    {
                                        <a href="@item.meta" class="custom-toltip" data-bs-toggle="modal" role="button">
                                            <span class="fa fa-eye"></span>
                                            <span class="custom-toltip-block">Xem</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/JotForm/ShowFormWithDownload/@item.meta" class="custom-toltip">
                                            <span class="fa fa-eye"></span>
                                            <span class="custom-toltip-block">View</span>
                                        </a>
                                    }

                                </li>
                                <li>
                                    <a href="@Url.Action("Edit", "CV", new { id = item.id })" role="button" class="custom-toltip">
                                        <span class="fa fa-edit"></span>
                                        <span class="custom-toltip-block">Sửa</span>
                                    </a>
                                </li>
                                <li>
                                    <a data-bs-toggle="modal" href="@Url.Action("Xóa", "menus", new { id = item.id})" role="button" class="custom-toltip">
                                        <span class="far fa-trash-alt"></span>
                                        <span class="custom-toltip-block">Xóa</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
